pipeline{
  agent any
  parameters{
    run filter: 'ALL', name: 'PROMOTED_BUILD', projectName: 'riv4lz-backend'
  }
  stages{
    stage("Deploy to production"){
      steps{
        sh "docker-compose -f docker-compose-prod.yml --env-file Prod.env pull"
        sh "docker-compose -f docker-compose-prod.yml --env-file Prod.env up -d"
      }
    }
  }
}