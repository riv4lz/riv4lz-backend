FROM mcr.microsoft.com/dotnet/runtime:6.0 AS base
WORKDIR /app

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src
COPY ["CacheWorker/CacheWorker.csproj", "CacheWorker/"]
RUN dotnet restore "CacheWorker/CacheWorker.csproj"
COPY . .
WORKDIR "/src/CacheWorker"
RUN dotnet build "CacheWorker.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "CacheWorker.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "CacheWorker.dll"]
